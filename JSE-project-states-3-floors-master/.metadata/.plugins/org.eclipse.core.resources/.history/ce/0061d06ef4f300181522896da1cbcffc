package io.altar.textInterface.stateMachine.states;

public class ProductMenu implements State {

	@Override
	public int execute(){
		System.out.println("Product List");
		System.out.println("");
		
		System.out.println("1) Create a new product");
		System.out.println("2) Edit an existing product");
		System.out.println("3) Consult the details of a product");
		System.out.println("4) Delete a product");
		System.out.println("5) return to the initial menu");
		int [] validValues={1,2,3,4,5};
		return scannerUtils.getValidIntFromScanner("Please choose one of the following options",validValues);
		
	}
}
